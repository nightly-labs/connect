{
  "name": "sdk",
  "scripts": {
    "bindings": "rm -rf ./bindings && cp -r ../server/bindings ./bindings",
    "build": "turbo run build",
    "dev": "turbo run dev --concurrency 18",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postinstall": "sh ./build-only-packages.sh"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "eslint": "^7.32.0",
    "eslint-config-custom": "workspace:*",
    "prettier": "^2.5.1",
    "turbo": "latest",
    "typescript": "^4.9.0"
  },
  "packageManager": "pnpm@7.15.0",
  "dependencies": {
    "@nightlylabs/nightly-connect-polkadot": "workspace:*",
    "@nightlylabs/wallet-selector-base": "^0.2.4",
    "vite": "^4.5.1",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.31.1"
  },
  "pnpm": {
    "ignore-workspace-root-check": true
  }
}
